<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - Sistema Almacén SMDG</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex flex-column align-items-center justify-content-center" asp-controller="Dashboard" asp-action="Index" style="height: auto; padding: 1.5rem 0;">
                <div class="sidebar-brand-icon">
                    <img src="~/img/SMDG.png" alt="SMDG Logo" class="img-profile rounded-circle shadow" 
                         style="width: 70px; height: 70px; border: 3px solid rgba(255,255,255,0.2); background-color: white; object-fit: contain;" />
                </div>
                <div class="sidebar-brand-text mx-3 mt-3 d-flex flex-column align-items-center">
                    <div style="font-size: 1.2rem; font-weight: 800; text-uppercase; letter-spacing: 2px;">SMDG</div>
                    <div class="small text-white-50" style="letter-spacing: 1px; font-weight: 600;">SYSTEMS</div>
                </div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            @{
                string controller = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
                string action = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
                
                // Grupos de navegacion
                bool isCatalogos = (new[] { "Productos", "Proveedores", "Ubicaciones" }).Contains(controller);
                bool isOperaciones = (new[] { "Entradas", "Inventario", "Venta", "Importar" }).Contains(controller) || (controller == "Home" && action == "Index");
                bool isReportes = (new[] { "Reportes", "Movimientos", "Auditoria" }).Contains(controller);
                bool isAdmin = (new[] { "Usuarios" }).Contains(controller);
            }

            <!-- Nav Item - Dashboard -->
            <li class="nav-item @(controller == "Dashboard" ? "active" : "")">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Item - Catálogos Collapse Menu -->
            <li class="nav-item @(isCatalogos ? "active" : "")">
                <a class="nav-link @(isCatalogos ? "" : "collapsed")" href="#" data-toggle="collapse" data-target="#collapseCatalogos"
                    aria-expanded="@(isCatalogos ? "true" : "false")" aria-controls="collapseCatalogos">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Catálogos</span>
                </a>
                <div id="collapseCatalogos" class="collapse @(isCatalogos ? "show" : "")" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item @(controller == "Productos" ? "active font-weight-bold" : "")" asp-controller="Productos" asp-action="Index">Productos</a>
                        <a class="collapse-item @(controller == "Proveedores" ? "active font-weight-bold" : "")" asp-controller="Proveedores" asp-action="Index">Proveedores</a>
                        <a class="collapse-item @(controller == "Ubicaciones" ? "active font-weight-bold" : "")" asp-controller="Ubicaciones" asp-action="Index">Ubicaciones</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Operaciones Collapse Menu -->
            <li class="nav-item @(isOperaciones ? "active" : "")">
                <a class="nav-link @(isOperaciones ? "" : "collapsed")" href="#" data-toggle="collapse" data-target="#collapseOperaciones"
                    aria-expanded="@(isOperaciones ? "true" : "false")" aria-controls="collapseOperaciones">
                    <i class="fas fa-fw fa-cogs"></i>
                    <span>Operaciones</span>
                </a>
                <div id="collapseOperaciones" class="collapse @(isOperaciones ? "show" : "")" aria-labelledby="headingUtilities"
                    data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item @(controller == "Entradas" ? "active font-weight-bold" : "")" asp-controller="Entradas" asp-action="Create">Entradas (Compras)</a>
                        <a class="collapse-item @(controller == "Inventario" ? "active font-weight-bold" : "")" asp-controller="Inventario" asp-action="Index">Inventario FIFO</a>
                        <a class="collapse-item @(controller == "Venta" || (controller == "Home" && action == "Index") ? "active font-weight-bold" : "")" asp-controller="Home" asp-action="Index">Punto de Venta</a>
                        <a class="collapse-item @(controller == "Importar" ? "active font-weight-bold" : "")" asp-controller="Importar" asp-action="Index">📥 Importar Excel</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Reportes Collapse Menu -->
            <li class="nav-item @(isReportes ? "active" : "")">
                <a class="nav-link @(isReportes ? "" : "collapsed")" href="#" data-toggle="collapse" data-target="#collapseReportes"
                    aria-expanded="@(isReportes ? "true" : "false")" aria-controls="collapseReportes">
                    <i class="fas fa-fw fa-chart-bar"></i>
                    <span>Reportes</span>
                </a>
                <div id="collapseReportes" class="collapse @(isReportes ? "show" : "")" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item @(controller == "Reportes" && action == "Index" ? "active font-weight-bold" : "")" asp-controller="Reportes" asp-action="Index">Historial Movimientos</a>
                        <a class="collapse-item @(controller == "Reportes" && action == "Auditoria" ? "active font-weight-bold" : "")" asp-controller="Reportes" asp-action="Auditoria">Auditoría</a>
                    </div>
                </div>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <!-- Nav Item - Admin Collapse Menu -->
                <li class="nav-item @(isAdmin ? "active" : "")">
                    <a class="nav-link @(isAdmin ? "" : "collapsed")" href="#" data-toggle="collapse" data-target="#collapseAdmin"
                        aria-expanded="@(isAdmin ? "true" : "false")" aria-controls="collapseAdmin">
                        <i class="fas fa-fw fa-user-shield"></i>
                        <span>Admin</span>
                    </a>
                    <div id="collapseAdmin" class="collapse @(isAdmin ? "show" : "")" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <a class="collapse-item @(controller == "Usuarios" ? "active font-weight-bold" : "")" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </div>
                    </div>
                </li>
            }

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity?.Name</span>
                                @if (User.IsInRole("Admin"))
                                {
                                    <img class="img-profile rounded-circle" src="~/img/profile-user.jpg" alt="Admin Profile">
                                }
                                else
                                {
                                    <img class="img-profile rounded-circle" src="~/img/profile-admin.png" alt="User Profile">
                                }
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Perfil
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Configuración
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-controller="Acceso" asp-action="Salir" method="post" style="margin: 0;">
                                    <button type="submit" class="dropdown-item" style="cursor: pointer; background: none; border: none; text-align: left; width: 100%; padding: 0.25rem 1.5rem;">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Cerrar Sesión
                                    </button>
                                </form>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; SMDG Systems 2026</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>