@model Sistema_Almacen.Models.Ubicacion

@{
    ViewData["Title"] = "Nueva Ubicación";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Nueva Ubicación Física</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label font-weight-bold">Nombre de la Ubicación</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Pasillo A, Estante 2..." />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Codigo" class="control-label font-weight-bold">Código Identificador (Único)</label>
                        <input asp-for="Codigo" class="form-control text-uppercase" placeholder="Ej: PA-01-E2" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                    <hr>
                    <div class="form-group mb-0">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar Ubicación
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
