@model Sistema_Almacen.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard de Almacén</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
            class="fas fa-download fa-sm text-white-50"></i> Generar Reporte</a>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Total Productos Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Productos</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalProductos</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-boxes fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Valor Inventario Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Valor Inventario</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ValorInventario.ToString("C")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ventas Hoy Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Ventas (Hoy)
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.VentasHoy</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stock Bajo Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Productos Stock Bajo</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ProductosStockBajo</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->
<div class="row">
    <!-- Bienvenida Card -->
    <div class="col-xl-8 col-lg-7 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Resumen de Usuario</h6>
            </div>
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-auto mr-3">
                        @if (ViewBag.Rol == "Admin")
                        {
                            <img src="~/img/profile-user.jpg" alt="Admin" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="~/img/profile-admin.png" alt="Usuario" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                        }
                    </div>
                    <div class="col">
                        <div class="h4 mb-1 font-weight-bold text-gray-800">
                            @(ViewBag.Rol == "Admin" ? "Ing. Alexander Sosa" : "Erick Diaz")
                        </div>
                        <div class="text-sm text-gray-600 mb-1">
                            Usuario: <strong>@ViewBag.NombreUsuario</strong> | Rol: <span class="badge badge-@(ViewBag.Rol == "Admin" ? "success" : "info")">@ViewBag.Rol</span>
                        </div>
                        <p class="mt-2">Bienvenido de nuevo al sistema SMDG. Aquí puedes monitorear el estado actual de tu almacén de forma rápida.</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Productos Recientes -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Productos Agregados Recientemente</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>SKU</th>
                                <th>Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ProductosRecientes != null && Model.ProductosRecientes.Any())
                            {
                                foreach (var p in Model.ProductosRecientes)
                                {
                                    <tr>
                                        <td>@p.Nombre</td>
                                        <td>@p.SKU</td>
                                        <td>@p.PrecioVenta.ToString("C")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center">No hay productos registrados</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Acciones Rápidas</h6>
            </div>
            <div class="card-body">
                <a href="#" class="btn btn-primary btn-block mb-3">
                    <i class="fas fa-plus fa-sm text-white-50"></i> Nueva Venta
                </a>
                <a asp-controller="Inventario" asp-action="Index" class="btn btn-success btn-block mb-3">
                    <i class="fas fa-boxes fa-sm text-white-50"></i> Ver Inventario
                </a>
                <a href="#" class="btn btn-info btn-block mb-3">
                    <i class="fas fa-chart-line fa-sm text-white-50"></i> Reportes
                </a>
                @if (ViewBag.Rol == "Admin")
                {
                    <hr>
                    <a href="#" class="btn btn-warning btn-block">
                        <i class="fas fa-users-cog fa-sm text-white-50"></i> Gestionar Usuarios
                    </a>
                }
            </div>
        </div>
    </div>
</div>
