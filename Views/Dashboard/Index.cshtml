@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Bienvenida Card -->
    <div class="col-xl-12 col-md-12 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col-auto mr-3">
                        @* Mostrar foto del usuario según el rol *@
                        @if (ViewBag.Rol == "Admin")
                        {
                            <img src="~/img/profile-user.jpg" alt="Ing. Alexander Sosa" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="~/img/profile-admin.png" alt="Erick Diaz" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                        }
                    </div>
                    <div class="col">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Bienvenido al Sistema de Almacén SMDG
                        </div>
                        @* Mostrar nombre completo según el rol *@
                        @if (ViewBag.Rol == "Admin")
                        {
                            <div class="h4 mb-1 font-weight-bold text-gray-800">Ing. Alexander Sosa</div>
                        }
                        else
                        {
                            <div class="h4 mb-1 font-weight-bold text-gray-800">Erick Diaz</div>
                        }
                        <div class="text-sm text-gray-600 mb-1">
                            Usuario: <strong>@ViewBag.NombreUsuario</strong>
                        </div>
                        <div class="text-xs text-gray-600">
                            Rol: <span class="badge badge-@(ViewBag.Rol == "Admin" ? "success" : "info")">@ViewBag.Rol</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Content Row -->
<div class="row">

    <!-- Info Card -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Información del Sistema</h6>
            </div>
            <div class="card-body">
                <p>Este es el Dashboard principal del Sistema de Almacén.</p>
                <p>Utiliza el menú lateral para navegar por las diferentes secciones:</p>
                <ul>
                    <li><strong>Inventario FIFO:</strong> Gestión de inventario con método FIFO</li>
                    <li><strong>Punto de Venta:</strong> Registro de ventas</li>
                    <li><strong>Reportes / Historial:</strong> Consulta de movimientos y reportes</li>
                    <li><strong>Usuarios:</strong> Administración de usuarios (Solo Admin)</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Quick Actions Card -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Acciones Rápidas</h6>
            </div>
            <div class="card-body">
                <a href="#" class="btn btn-primary btn-block btn-sm mb-2">
                    <i class="fas fa-plus"></i> Nueva Venta
                </a>
                <a href="#" class="btn btn-success btn-block btn-sm mb-2">
                    <i class="fas fa-boxes"></i> Ver Inventario
                </a>
                <a href="#" class="btn btn-info btn-block btn-sm mb-2">
                    <i class="fas fa-chart-bar"></i> Reportes
                </a>
                @if (ViewBag.Rol == "Admin")
                {
                    <hr>
                    <a href="#" class="btn btn-warning btn-block btn-sm">
                        <i class="fas fa-users-cog"></i> Administrar Usuarios
                    </a>
                }
            </div>
        </div>
    </div>

</div>
