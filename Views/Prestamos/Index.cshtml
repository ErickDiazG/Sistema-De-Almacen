@model IEnumerable<Sistema_Almacen.Models.Prestamo>
@using Sistema_Almacen.Models

@{
    ViewData["Title"] = "Control de Préstamos";
    var filtroActual = ViewBag.FiltroActual as string ?? "activos";
}

<!-- Page Heading con Estadísticas -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-hand-holding text-primary"></i> Control de Préstamos y Activos
    </h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Nuevo Préstamo
    </a>
</div>

<!-- Tarjetas de Estadísticas -->
<div class="row mb-4">
    <!-- Préstamos Activos -->
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Préstamos Activos</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalActivos</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Préstamos Atrasados -->
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2 @(ViewBag.TotalAtrasados > 0 ? "bg-gradient-danger text-white" : "")">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold @(ViewBag.TotalAtrasados > 0 ? "text-white" : "text-danger") text-uppercase mb-1">
                            <i class="fas fa-exclamation-triangle"></i> MOROSOS / Atrasados
                        </div>
                        <div class="h5 mb-0 font-weight-bold @(ViewBag.TotalAtrasados > 0 ? "text-white" : "text-gray-800")">
                            @ViewBag.TotalAtrasados
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-times fa-2x @(ViewBag.TotalAtrasados > 0 ? "text-white-50" : "text-gray-300")"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Devueltos -->
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Devueltos</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalDevueltos</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Alerta de Éxito -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
    </div>
}

<!-- Filtros -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="btn-group" role="group">
            <a asp-action="Index" asp-route-filtro="activos" 
               class="btn @(filtroActual == "activos" ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-clock"></i> Activos
            </a>
            <a asp-action="Index" asp-route-filtro="atrasados" 
               class="btn @(filtroActual == "atrasados" ? "btn-danger" : "btn-outline-danger")">
                <i class="fas fa-exclamation-triangle"></i> Atrasados
            </a>
            <a asp-action="Index" asp-route-filtro="devueltos" 
               class="btn @(filtroActual == "devueltos" ? "btn-success" : "btn-outline-success")">
                <i class="fas fa-check"></i> Devueltos
            </a>
            <a asp-action="Index" asp-route-filtro="todos" 
               class="btn @(filtroActual == "todos" ? "btn-secondary" : "btn-outline-secondary")">
                <i class="fas fa-list"></i> Todos
            </a>
        </div>
    </div>
</div>

<!-- Tabla de Préstamos -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-table"></i> Lista de Préstamos
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 20%;">Activo/Producto</th>
                        <th style="width: 15%;">Solicitante</th>
                        <th class="text-center" style="width: 8%;">Cant.</th>
                        <th style="width: 12%;">Fecha Salida</th>
                        <th style="width: 12%;">Fecha Límite</th>
                        <th class="text-center" style="width: 15%;">Estado</th>
                        <th class="text-center" style="width: 13%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                No hay préstamos para mostrar.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            // Determinar clase de la fila según estado
                            string rowClass = "";
                            if (item.Estatus == EstatusPrestamo.Activo && item.EstaAtrasado)
                            {
                                rowClass = "table-danger"; // Rojo para atrasados
                            }
                            else if (item.Estatus == EstatusPrestamo.Devuelto)
                            {
                                rowClass = "table-light text-muted";
                            }

                            <tr class="@rowClass">
                                <td class="align-middle">@item.Id</td>
                                <td class="align-middle">
                                    <strong>@item.Producto?.Nombre</strong><br>
                                    <small class="text-muted">@item.Producto?.SKU</small>
                                </td>
                                <td class="align-middle">
                                    <i class="fas fa-user"></i> @item.UsuarioSolicitante
                                    @if (!string.IsNullOrEmpty(item.Departamento))
                                    {
                                        <br><small class="text-muted">@item.Departamento</small>
                                    }
                                </td>
                                <td class="text-center align-middle">
                                    <span class="badge badge-pill badge-info">@item.Cantidad</span>
                                </td>
                                <td class="align-middle">
                                    @item.FechaSalida.ToString("dd/MM/yyyy")<br>
                                    <small class="text-muted">@item.FechaSalida.ToString("HH:mm")</small>
                                </td>
                                <td class="align-middle">
                                    @item.FechaEsperadaRegreso.ToString("dd/MM/yyyy")
                                </td>
                                <td class="text-center align-middle">
                                    @if (item.Estatus == EstatusPrestamo.Devuelto)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i> Devuelto
                                        </span>
                                        <br>
                                        <small class="text-muted">@item.FechaDevolucionReal?.ToString("dd/MM/yyyy")</small>
                                    }
                                    else if (item.EstaAtrasado)
                                    {
                                        <span class="badge badge-danger" style="font-size: 0.9em; padding: 8px 12px;">
                                            <i class="fas fa-exclamation-triangle"></i> ¡ATRASADO @item.DiasAtraso DÍA(S)!
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-clock"></i> A Tiempo
                                        </span>
                                        @if (item.DiasRestantes <= 2 && item.DiasRestantes >= 0)
                                        {
                                            <br>
                                            <small class="text-warning font-weight-bold">
                                                <i class="fas fa-hourglass-half"></i> Quedan @item.DiasRestantes día(s)
                                            </small>
                                        }
                                    }
                                </td>
                                <td class="text-center align-middle">
                                    @if (item.Estatus == EstatusPrestamo.Activo)
                                    {
                                        <button type="button" class="btn btn-success btn-sm" 
                                                onclick="confirmarDevolucion(@item.Id, '@item.Producto?.Nombre', '@item.UsuarioSolicitante')"
                                                title="Registrar Devolución">
                                            <i class="fas fa-undo"></i> Devolver
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Leyenda -->
<div class="card shadow mb-4">
    <div class="card-body py-2">
        <small>
            <strong>Leyenda:</strong>
            <span class="badge badge-danger ml-2">ATRASADO</span> = Pasó la fecha límite
            <span class="badge badge-success ml-3">A Tiempo</span> = Dentro del plazo
            <span class="badge badge-secondary ml-3">Devuelto</span> = Ya fue regresado
        </small>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmarDevolucion(prestamoId, productoNombre, solicitante) {
            Swal.fire({
                title: 'Registrar Devolución',
                html: `
                    <p>¿Confirmar devolución de <strong>${productoNombre}</strong>?</p>
                    <p class="text-muted">Solicitante: ${solicitante}</p>
                    <div class="form-group text-left">
                        <label>Comentario de devolución (opcional):</label>
                        <input type="text" id="comentarioDevolucion" class="form-control" 
                               placeholder="Ej: En buen estado, sin daños">
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-check"></i> Confirmar Devolución',
                cancelButtonText: 'Cancelar',
                preConfirm: () => {
                    return document.getElementById('comentarioDevolucion').value;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    procesarDevolucion(prestamoId, result.value);
                }
            });
        }

        function procesarDevolucion(prestamoId, comentario) {
            Swal.fire({
                title: 'Procesando...',
                allowOutsideClick: false,
                didOpen: () => { Swal.showLoading(); }
            });

            $.ajax({
                url: '@Url.Action("Devolver", "Prestamos")',
                type: 'POST',
                data: { id: prestamoId, comentarioDevolucion: comentario },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: response.estabaAtrasado ? 'warning' : 'success',
                            title: response.estabaAtrasado ? 'Devolución con Atraso' : '¡Devolución Exitosa!',
                            text: response.message
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error', response.message, 'error');
                    }
                },
                error: function () {
                    Swal.fire('Error', 'Error de conexión con el servidor.', 'error');
                }
            });
        }
    </script>
}
