@model Sistema_Almacen.Models.ViewModels.LoanMonitorViewModel

@{
    ViewData["Title"] = "Monitor de Préstamos";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Monitor de Préstamos (Traffic Light)</h1>
</div>

<!-- TABS NAVIGATION -->
<ul class="nav nav-pills mb-4" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-active-tab" data-toggle="pill" href="#pills-active" role="tab" aria-selected="true">
            <i class="fas fa-circle text-success mr-2"></i> Activos (@Model.ActiveLoans.Count)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(Model.TotalOverdue > 0 ? "bg-danger text-white font-weight-bold" : "")" id="pills-overdue-tab" data-toggle="pill" href="#pills-overdue" role="tab" aria-selected="false">
            <i class="fas fa-exclamation-triangle mr-2"></i> MOROSOS / ATRASADOS (@Model.TotalOverdue)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-history-tab" data-toggle="pill" href="#pills-history" role="tab" aria-selected="false">
            <i class="fas fa-history mr-2"></i> Historial Cerrado
        </a>
    </li>
</ul>

<div class="tab-content" id="pills-tabContent">
    
    <!-- ACTIVE LOANS TAB -->
    <div class="tab-pane fade show active" id="pills-active" role="tabpanel">
        <div class="row">
            @foreach (var loan in Model.ActiveLoans)
            {
                <div class="col-md-4 mb-4">
                     @await Html.PartialAsync("_LoanCard", loan)
                </div>
            }
            @if(!Model.ActiveLoans.Any()) { <div class="col-12"><div class="alert alert-info">No hay préstamos activos normales.</div></div> }
        </div>
    </div>

    <!-- OVERDUE LOANS TAB (RED) -->
    <div class="tab-pane fade" id="pills-overdue" role="tabpanel">
        <div class="row">
            @foreach (var loan in Model.OverdueLoans)
            {
                <div class="col-md-4 mb-4">
                     @await Html.PartialAsync("_LoanCard", loan)
                </div>
            }
             @if(!Model.OverdueLoans.Any()) { <div class="col-12"><div class="alert alert-success">¡Excelente! No hay préstamos atrasados.</div></div> }
        </div>
    </div>

    <!-- HISTORY TAB -->
    <div class="tab-pane fade" id="pills-history" role="tabpanel">
        <div class="row">
            @foreach (var loan in Model.HistoryLoans)
            {
                <div class="col-md-4 mb-4">
                     @await Html.PartialAsync("_LoanCard", loan)
                </div>
            }
        </div>
    </div>
</div>

<!-- RETURN WIZARD MODAL -->
<div class="modal fade" id="returnModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-undo-alt mr-2"></i> Asistente de Devolución</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="modalLoanId" />
                <h5 class="font-weight-bold" id="modalProductName">Producto</h5>
                <p class="text-muted small">Solicitante: <span id="modalUser"></span></p>
                
                <hr>

                <div class="form-group">
                    <label>Cantidad a Devolver (Pendiente: <span id="modalPending" class="font-weight-bold"></span>)</label>
                    <input type="number" class="form-control form-control-lg" id="modalQty" min="1" />
                </div>

                <div class="form-group">
                    <label>Condición del Activo</label>
                    <div class="btn-group btn-group-toggle w-100" data-toggle="buttons">
                        <label class="btn btn-outline-success active">
                            <input type="radio" name="modalCondicion" value="BUENO" checked> <i class="fas fa-check"></i> Buen Estado
                        </label>
                         <label class="btn btn-outline-danger">
                            <input type="radio" name="modalCondicion" value="DAÑADO"> <i class="fas fa-heart-broken"></i> Dañado/Perdido
                        </label>
                    </div>
                    <small class="text-muted">Si selecciona "Dañado", el item NO volverá al stock y se generará un reporte de pérdida.</small>
                </div>

                <div class="form-group">
                    <label>Observaciones</label>
                    <textarea class="form-control" id="modalObs" rows="2"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="submitReturn()">Confirmar Devolución</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function openReturnWizard(id, product, user, pending) {
            $('#modalLoanId').val(id);
            $('#modalProductName').text(product);
            $('#modalUser').text(user);
            $('#modalPending').text(pending);
            $('#modalQty').val(pending); // Default to full return
            $('#modalObs').val('');
            $('#returnModal').modal('show');
        }

        function submitReturn() {
            var id = $('#modalLoanId').val();
            var qty = $('#modalQty').val();
            var cond = $('input[name="modalCondicion"]:checked').val();
            var obs = $('#modalObs').val();

            if(qty < 1) { Swal.fire('Error', 'Cantidad inválida', 'error'); return; }

            $.post('@Url.Action("RegistrarDevolucion", "Prestamos")', {
                loanId: id,
                cantidadDevolver: qty,
                condicion: cond,
                observaciones: obs
            }, function(res) {
                if(res.success) {
                    $('#returnModal').modal('hide');
                    Swal.fire('Éxito', res.message, 'success').then(() => location.reload());
                } else {
                    Swal.fire('Error', res.message, 'error');
                }
            });
        }
    </script>
}
