@model IEnumerable<Sistema_Almacen.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Usuarios del Sistema</h6>
        <button class="btn btn-primary btn-sm disabled">
            <i class="fas fa-user-plus"></i> Nuevo Usuario (Próximamente)
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center">Avatar</th>
                        <th>Nombre de Usuario</th>
                        <th>Rol</th>
                        <th>Email (Simulado)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @if (item.Rol == "Admin")
                                {
                                    <img src="~/img/profile-user.jpg" class="rounded-circle" style="width: 40px; height: 40px;" alt="Avatar">
                                }
                                else
                                {
                                    <img src="~/img/profile-admin.png" class="rounded-circle" style="width: 40px; height: 40px;" alt="Avatar">
                                }
                            </td>
                            <td class="font-weight-bold">@item.NombreUsuario</td>
                            <td>
                                <span class="badge @(item.Rol == "Admin" ? "badge-dark" : "badge-info") text-uppercase">
                                    @item.Rol
                                </span>
                            </td>
                            <td>@(item.NombreUsuario)@("@smdg.com.mx")</td>
                            <td class="text-center">
                                <button class="btn btn-warning btn-circle btn-sm disabled">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-danger btn-circle btn-sm disabled">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
