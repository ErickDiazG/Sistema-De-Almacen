@model IEnumerable<Sistema_Almacen.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Usuarios del Sistema</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-user-plus"></i> Nuevo Usuario
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th class="text-center">Avatar</th>
                        <th>Nombre Completo</th>
                        <th>No. Empleado / Usuario</th>
                        <th>Rol</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center align-middle">
                                @if (item.Rol == "Admin")
                                {
                                    <img src="~/img/profile-user.jpg" class="rounded-circle" style="width: 40px; height: 40px;" alt="Avatar">
                                }
                                else
                                {
                                    <img src="~/img/profile-admin.png" class="rounded-circle" style="width: 40px; height: 40px;" alt="Avatar">
                                }
                            </td>
                            <td class="align-middle font-weight-bold">@item.Nombre</td>
                            <td class="align-middle">@item.NombreUsuario</td>
                            <td class="align-middle">
                                <span class="badge @(item.Rol == "Admin" ? "badge-dark" : "badge-info") text-uppercase p-2">
                                    @item.Rol
                                </span>
                            </td>
                            <td class="text-center align-middle">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-circle btn-sm" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="confirmarEliminar(@item.Id, '@item.NombreUsuario')" class="btn btn-danger btn-circle btn-sm" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminar(id, nombre) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "Se eliminará el usuario " + nombre,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Usuarios/Delete/' + id, function(data) {
                        if (data.success) {
                            Swal.fire(
                                'Eliminado!',
                                data.message,
                                'success'
                            ).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire(
                                'Error!',
                                data.message,
                                'error'
                            );
                        }
                    });
                }
            })
        }
    </script>
}
